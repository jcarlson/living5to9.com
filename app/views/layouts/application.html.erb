<!DOCTYPE html>
<html>

    <head>
      <title>living5to9.com</title>
      <link href='http://fonts.googleapis.com/css?family=Architects+Daughter|Lato:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
      <%= stylesheet_link_tag :application %>
      <%= javascript_include_tag :application %>
      <%= csrf_meta_tag %>
    </head>

    <body>

        <div class="page<%= ' frontpage' if frontpage? %><%= ' photopage' if photopage? %>">

          <div class="masthead">

            <h1><a href="index.html">Living5to9.com</a></h1>

            <div class="navigation">
              <% unless photopage? %>
                <%= image_tag 'masthead.jpg' %>
               <% end %>
              <%= render 'layouts/navigation' %>
            </div>

          </div>

          <div class="content">
            <%= yield %>
          </div>

          <div class="footer">
            <%= render 'layouts/navigation' %>
          </div>

        </div>

    </body>

</html>
